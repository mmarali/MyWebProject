<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Sylabus</title>
    <link rel="stylesheet" href="~/frontend/dist/css/app.css" />
</head>
<body>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        © 2025 - Sylabus - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/frontend/dist/js/chunk-vendors.js"></script>
<script src="~/frontend/dist/js/app.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>